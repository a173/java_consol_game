<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <File name="FileAppender" filename = "action-${date:yyyyMMdd}.log" immediateFlush="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%logger{36}] %-5level- %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>